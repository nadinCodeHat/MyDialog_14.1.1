    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/madme_rating_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.5"/>
        <FrameLayout android:layout_gravity="center" android:paddingTop="@dimen/madme_standard_padding_double" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.5">
            <com.madme.mobile.sdk.views.MadmeFaceRatingBar android:gravity="top|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/madme_rating_face_ratingbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.madme.mobile.sdk.views.MadmeStarRatingBar android:gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/madme_rating_star_ratingbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/madme_survey_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ViewStub android:id="@+id/madme_img_survey_background_stub" android:layout="@layout/madme_img_survey_background" android:inflatedId="@+id/madme_img_survey_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ViewStub android:id="@+id/madme_img_survey_server_background_stub" android:layout="@layout/madme_img_survey_server_background" android:inflatedId="@+id/madme_img_survey_server_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:paddingLeft="@dimen/madme_standard_padding" android:paddingTop="@dimen/madme_standard_padding" android:paddingRight="@dimen/madme_standard_padding" android:layout_width="match_parent" android:layout_height="match_parent">

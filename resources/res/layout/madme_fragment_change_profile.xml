<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="@dimen/madme_standard_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/madme_profile_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/madme_change_profile_header" android:layout_alignParentTop="true" style="@style/MadmeMainTitle"/>
    <ScrollView android:id="@+id/madme_scroll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/madme_profile_title">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/madme_account_settings_conatainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/madme_demographic_conatainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/madme_location_conatainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/madme_interests_conatainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:id="@+id/madme_save_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/madme_standard_margin" android:text="@string/madme_settings_save" style="@style/MadmeCustomSaveButton"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

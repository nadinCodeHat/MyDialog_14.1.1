            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/madme_cancel_ad" android:background="@android:color/transparent" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/madme_btn_cancel"/>
            <include android:id="@+id/madme_vendor_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" layout="@layout/madme_ad_vendor_logo"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/madme_ad_view_footer" android:background="@color/madme_ad_footer_background_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/madme_buttons_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="@dimen/madme_standard_padding" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.2"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/madme_unsubscribe_holder" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6">
                    <ImageView android:id="@+id/madme_expand_more" android:layout_width="36dp" android:layout_height="20dp" android:scaleType="centerCrop" app:srcCompat="@drawable/madme_ic_expand_less_white"/>
                    <TextView android:textSize="12dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/madme_ad_unsubscribe"/>
                </LinearLayout>
                <LinearLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:padding="@dimen/madme_standard_padding" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.2">
                    <androidx.appcompat.widget.AppCompatImageButton android:gravity="center_vertical" android:id="@+id/madme_terms_button" android:background="@android:color/transparent" android:focusable="false" android:focusableInTouchMode="false" android:visibility="visible" android:layout_width="32dp" android:layout_height="32dp" android:textOn="" android:textOff="" app:srcCompat="@drawable/madme_ic_ad_tandc"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/madme_buttons_container">
                <com.madme.mobile.sdk.views.ExpandableLinearLayout android:orientation="vertical" android:id="@+id/madme_expandableLayout" android:layout_width="match_parent" android:layout_height="wrap_content" app:madme_ael_duration="500" app:madme_ael_expanded="false">
                    <FrameLayout android:id="@+id/madme_opt_out_fragment_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/madme_standard_margin" android:layout_marginBottom="0dp" android:layout_toLeftOf="@+id/madme_terms_button" android:layout_centerVertical="true"/>
                </com.madme.mobile.sdk.views.ExpandableLinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton android:textSize="15sp" android:textColor="@color/madme_ad_action_button_text_color" android:layout_gravity="bottom" android:id="@+id/madme_ad_action_button" android:background="@drawable/madme_ad_action_button_background" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/madme_standard_margin" android:maxWidth="300dp" android:minWidth="200dp" android:layout_above="@+id/madme_ad_view_footer" android:layout_centerHorizontal="true" android:layout_alignWithParentIfMissing="true"/>
        <Button android:textSize="12sp" android:layout_gravity="bottom" android:id="@+id/madme_skip" android:padding="@dimen/madme_standard_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/madme_standard_margin" android:text="@string/madme_ad_skip" android:layout_above="@+id/madme_ad_action_button" android:layout_alignParentRight="true" android:layout_alignWithParentIfMissing="true"/>
        <Button android:textSize="12sp" android:layout_gravity="top" android:id="@+id/madme_mute" android:padding="@dimen/madme_standard_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/madme_standard_margin" android:drawableLeft="@drawable/madme_ic_mute_wrap" android:layout_below="@+id/madme_ad_view_header" android:layout_alignParentRight="true" android:drawableStart="@drawable/madme_ic_mute_wrap"/>
        <TextView android:textSize="14sp" android:gravity="center_horizontal" android:layout_gravity="top" android:id="@+id/madme_time_display" android:background="@color/madme_ad_time_display_background_color" android:padding="@dimen/madme_standard_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/madme_standard_margin" android:minEms="2" android:layout_below="@+id/madme_ad_view_header" android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</FrameLayout>

    </LinearLayout>
    <Button android:id="@+id/madme_get_ads" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/madme_standard_margin" android:text="@string/madme_offers_get_ads" style="@style/MadmeCustomSaveButton"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/madme_card_shadow"/>
            <corners android:radius="@dimen/madme_corner_radius"/>
        </shape>
    </item>
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/madme_card_bg"/>
            <corners android:radius="2dp"/>
            <stroke android:width="1px" android:color="@color/madme_card_stroke"/>
        </shape>
    </item>
</layer-list>

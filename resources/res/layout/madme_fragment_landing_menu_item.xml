<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/madme_row" android:padding="@dimen/madme_standard_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/madme_landing_icon" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="5dp" android:scaleType="fitCenter" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
        <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/madme_text_menu_color" android:id="@+id/madme_label" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="12dp" android:textColor="@color/madme_desc_menu_color" android:id="@+id/madme_txt_description" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="fitCenter" android:layout_weight="1" app:srcCompat="@drawable/madme_ic_chevron_right_white"/>
</LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/madme_ad_view_controls" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/madme_ad_view_header" android:background="@color/madme_ad_header_background_color" android:paddingLeft="@dimen/madme_ad_header_padding_left" android:paddingTop="@dimen/madme_ad_header_padding_top" android:paddingRight="@dimen/madme_ad_header_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">

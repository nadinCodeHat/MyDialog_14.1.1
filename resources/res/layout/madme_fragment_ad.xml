            <RelativeLayout android:id="@+id/madme_survey_page_navigation" android:padding="0dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
                <Button android:textColor="@color/madme_survey_prev_button_text_color" android:gravity="center" android:id="@+id/madme_survey_button_back" android:background="@drawable/madme_survey_prev_button_background" android:layout_width="40dp" android:layout_height="match_parent" android:layout_margin="4dp" android:minWidth="@dimen/madme_survey_prev_button_min_width" android:layout_alignParentLeft="true" android:layout_centerInParent="true"/>

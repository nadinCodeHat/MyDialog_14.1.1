<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/madme_landing_fragment_gradient_bgd" android:padding="@dimen/madme_standard_padding" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/madme_logo_gallery_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/madme_menu_container" android:layout_alignParentTop="true">
        <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/madme_logo" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" app:srcCompat="@drawable/madme_logo"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/madme_landing_fragment_ads_carousel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/madme_menu_container" android:background="@color/madme_background_menu_color" android:padding="@dimen/madme_standard_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ListView android:id="@+id/madme_landing_menu" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/madme_divider" android:dividerHeight="@dimen/madme_divider_size"/>
    </LinearLayout>
</RelativeLayout>

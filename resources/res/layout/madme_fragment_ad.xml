<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/madme_ad_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <ViewStub android:id="@+id/madme_tr_wv_stub" android:layout="@layout/madme_tr_wv" android:inflatedId="@+id/madme_tr_wv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/madme_img_ad" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <FrameLayout android:id="@+id/madme_web_ad_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
